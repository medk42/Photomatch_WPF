<UserControl x:Class="Photomatch_ProofOfConcept_WPF.WPF.View.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photomatch_ProofOfConcept_WPF.WPF.View"
             xmlns:behavior="clr-namespace:Photomatch_ProofOfConcept_WPF.WPF.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox x:Name="MainViewbox" 
                 behavior:MouseBehavior.MouseDownCommand="{Binding MouseDown}" 
                 behavior:MouseBehavior.MouseUpCommand="{Binding MouseUp}"
                 behavior:MouseBehavior.MouseMoveCommand="{Binding MouseMove}">
            <Grid>
                <Image x:Name="MainImage" Source="{Binding ImageSource}"></Image>
                <Canvas x:Name="MainCanvas"/>
            </Grid>
        </Viewbox>

        <Path x:Name="XAxisLines" Stroke="Red" Fill="Red"/>
        <Path x:Name="YAxisLines" Stroke="Green" Fill="Green"/>
        <Path x:Name="ZAxisLines" Stroke="Blue" Fill="Blue"/>
        <Path x:Name="ModelLines" Stroke="Cyan" Fill="Cyan"/>
    </Grid>
</UserControl>
